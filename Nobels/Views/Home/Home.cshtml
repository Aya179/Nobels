                    function topseller(){
                        var start = document.getElementById('start').value;
                        var end = document.getElementById('end').value;
                        if(start!=""&&end!="") {
                            $.get("/Home/TopSeller", { startdate: start, enddate: end }, function (data) {

                var table_tr = "";


                for (var i = 0; i < data.length; i++) {

                    table_tr += `
