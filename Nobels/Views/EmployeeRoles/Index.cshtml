<div class="row" style="margin-top:10px;">
    <div class="col-12">


        <div class="card">

            <div class="card-header">
                <h3 class="card-title">
                </h3>
                <a class="float-left" asp-action="Create">
                    <i class="fa fa-plus"></i>
                    إنشاء صلاحية جديدة

                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="dep_table">

                        <thead style="white-space: nowrap;">
                            <tr>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.RoleId)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.RoleName)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.RoleId)
                                    </td>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    

                                    <td style="text-align: center; white-space: nowrap;">
                                        <a asp-action="Edit" asp-route-id="@item.RoleId"><i class="fas fa-edit"></i></a> |
                                        <a asp-action="Details" asp-route-id="@item.RoleId "><i class="fas fa-eye"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.RoleId "><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>



                    </table>

                </div>
            </div>
        </div>
    </div>

</div>



