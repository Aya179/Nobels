                </div>
                <div class="card-body">
                    <form  asp-action="Delete" style=" width: 50vw; margin: auto; ">
                        <input type="hidden" asp-for="BranchId" />
                        
                            
                                <div class="form-outline mb-4">
                                    <label asp-for="BranchName" class="form-label" for="form6Example1"></label>
                                    <input asp-for="BranchName" type="text" id="form6Example1" class="form-control " readonly />

                                    <span asp-validation-for="BranchName" class="text-danger"></span>
                                </div>
                            

                            
                                <div class="form-outline mb-4">
                                    <label asp-for="BranchType" class="form-label" for="form6Example1"></label>
