        </form>
        </div>
        </div>
        </div>
        </section>

        <div class="table-responsive">
            <table class="table table-striped" id="dep_table">

                <thead style="white-space: nowrap;">
                    <tr>
                        <th style="text-align: center;">
                            اسم الغرفة
                        </th>

                        <th style="text-align: center;">
                            ملاحظات
                        </th>
                @*<th style="text-align: center;" hidden>
                    قيمة الخصم
                </th>
                        
                <th style="text-align: center;"hidden>
                   نوع الخصم
                </th>*@


                <th style="text-align: center;">
