@model Nobels.Models.Quotation

@{
    Layout = "_LayoutshowRoomAndProjectManger";
    ViewData["Title"] = "Delete";
}

<section>
  <div class="row ">
    <div class="col-12">
      <div class="card mb-4 col ">
      


        <div class="card-header" style=" display: flex;justify-content: space-between;">
                    <a asp-action="Index"> <i class="fa fa-arrow-left fa-lg"></i></a>
                    <p>حذف العرض</p>


               </div>
        <div class="card-body d-flex justify-content-center">
                    <form asp-action="DeleteQU" style=" width: 50vw; ">
            
                        <input type="hidden" asp-for="QuotationId" />
            
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <label asp-for="CustomerId" class="control-label"></label>
                  <input asp-for="Customer.Address" class ="form-control"  readonly/>
                 
                  <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                    <label asp-for="QuotationStatus" class="form-label" for="form6Example2"></label>
                  <input type="text" asp-for="QuotationStatus" id="form6Example2" class="form-control" readonly/>
                  
                  <span asp-validation-for="QuotationStatus" class="text-danger"></span>
                </div>
              </div>
            </div>

             <div class="form-outline mb-4">
                <label asp-for="Code" class="form-label" for="form6Example3"></label>
              <input asp-for="Code" type="text" id="form6Example3" class="form-control"  readonly/>
              
              <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            
            <div class="form-outline mb-4">
                <label asp-for="Notes"  class="form-label" for="form6Example3"></label>
              <input asp-for="Notes" type="text" id="form6Example3" class="form-control"  readonly/>
              
              <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

             <div class="form-outline mb-4">
                <label asp-for="BranchId" class="control-label"></label>
                  <input asp-for="Branch.BranchName" class ="form-control" readonly></input>
                 
                  <span asp-validation-for="Branch.BranchName" class="text-danger"></span>
            </div>
           
           @* <div class="form-outline mb-4">
                 <label asp-for="QuotationSimpleDate" class="form-label" for="form6Example4"></label>
              <input asp-for="QuotationSimpleDate" type="datetime" id="form6Example4" class="form-control" readonly />
             
              <span asp-validation-for="QuotationSimpleDate" class="text-danger"></span>
            </div>
*@
            

            <button class="btn btn-danger btn-lg btn-block" type="submit">
              حذف العرض
            </button>
          </form>
        </div>
      </div>
    </div>

  
  </div>
</section>
