@model Nobels.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutRepresntitiveAndAdvisor";
}


<!-- Credit card form -->
<section>
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
       
                <div class="card-header" style=" display: flex;
  justify-content: space-between;">
                    <a asp-action="Index"> <i class="fa fa-arrow-left fa-lg"></i></a>
                    


               </div>

         <div class="card-body">
                    <form  style=" width: 50vw;  margin: auto;">
                        <input type="hidden" asp-for="Id" />
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                                    <label asp-for="ArabicName" class="control-label"></label>
                                    <input asp-for="ArabicName" class="form-control" readonly />
                                    <span asp-validation-for="ArabicName" class="text-danger"></span>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                     <label asp-for="EnglishName" class="control-label"></label>
                <input asp-for="EnglishName" class="form-control" readonly />
                <span asp-validation-for="EnglishName" class="text-danger"></span>
                  
                </div>
              </div>
            </div>


             <div class="row mb-4" hidden>
              <div class="col">
                <div class="form-outline">
                                    <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" readonly />
                            <span asp-validation-for="Address" class="text-danger"></span>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                  <label asp-for="SecondAddress" class="control-label"></label>
                            <input asp-for="SecondAddress" class="form-control" readonly />
                            <span asp-validation-for="SecondAddress" class="text-danger"></span>
                  
                </div>
              </div>
            </div>

             <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="control-label">حي</label>
                                        <input name="neighborhood" class="form-control" type="text" value="@ViewBag.add.neighborhood" readonly />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="control-label">شارع</label>

                                        <input name="street" class="form-control" type="text" value="@ViewBag.add.street" readonly />


                                        <span class="text-danger"></span>

                                    </div>
                                </div>

                            </div>
                <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="control-label">رقم البيت</label>

                                        <input name="houseNumber" class="form-control" type="text" value="@ViewBag.add.houseNumber" readonly />


                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <label asp-for="CityId" class="control-label"></label>
                                        <input asp-for="City.CityName" class="form-control" readonly />

                                    </div>
                                </div>

                            </div>

            <!-- Text input -->
            
                      
            <!-- Email input -->
            <div class="form-outline mb-4">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" type="email" readonly/>
                            <span asp-validation-for="Email" class="text-danger" ></span>
            </div>

           
            <div class="form-outline mb-4">
                            <label asp-for="Notes" class="control-label"></label>
                            <input asp-for="Notes" class="form-control"readonly />
                            <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
                        <div class="form-outline mb-4">
                            <a href="../QuatationIndex/@ViewBag.CID">عروضي</a>
                            <a href="../CreateQuatationRooms/@ViewBag.CID">إضافة عرض</a>
                           
                        </div>

            
          </form>
        </div>
      </div>

    </div>
    
  </div>
</section>
<!-- Credit card form -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

