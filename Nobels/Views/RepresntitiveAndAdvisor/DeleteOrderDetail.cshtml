@model Nobels.Models.OrderDetail

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutRepresntitiveAndAdvisor";
}


<section>
    <div class="row ">
        <div class="col-12">
            <div class="card mb-4 col ">



                <div class="card-header" style=" display: flex;justify-content: space-between;">
@*                    <a asp-action="Index"> <i class="fa fa-arrow-left fa-lg"></i></a>
*@                    <p>حذف منتج  من العرض</p>


                </div>
                <div class="card-body d-flex justify-content-center">
                    <form asp-action="DeleteOrderDetail" style=" width: 50vw; ">
                         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                               <input type="hidden" asp-for="DetailId" />
                                <div class="row mb-4">
                        <div class="col">

                         <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <input asp-for="Item.ItemArName" class="form-control" readonly ></input>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>

            </div>
            <div class="col">
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"readonly  />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            </div>
            </div>

                       <div class="row mb-4">
                        <div class="col">

                        <div class="form-outline mb-4">

                            <label asp-for="Discount" class="control-label" ></label>
                               <input asp-for="Discount" class="form-control" readonly/>
                              <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col">


                        <div class="form-outline mb-4">

                             <label asp-for="DiscountType" class="control-label" ></label>
                <input asp-for="DiscountType" class="form-control" readonly />
                <span asp-validation-for="DiscountType" class="text-danger"></span>




                          
                        </div>
                        </div>
                        </div>


                         <div class="row mb-4">
                        <div class="col">

                        <div class="form-outline mb-4">

                           <label asp-for="Quantity" class="control-label" ></label>
                <input asp-for="Quantity" class="form-control"  readonly/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col">


                        <div class="form-outline mb-4">

                          <label asp-for="TotalValue" class="control-label" ></label>
                <input asp-for="TotalValue" class="form-control"  readonly/>
                <span asp-validation-for="TotalValue" class="text-danger"></span>



                          
                        </div>
                        </div>
                        </div>
                        
          

             <div class="form-group">
                <label asp-for="QoutationId" class="control-label" hidden></label>
                <select asp-for="QoutationId" class="form-control" asp-items="ViewBag.QoutationId" hidden></select>
                <span asp-validation-for="QoutationId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Notes" class="control-label"  hidden></label>
                <input asp-for="Notes" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
           




                        <button class="btn btn-danger btn-lg btn-block" type="submit" @*onclick="redirect()"*@>
                            حذف
                        </button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</section>

@section Scripts {
    <script>
         function redirect() 
         {
           var url = document.URL;
            var stuff = url.split('/');
            var id = stuff[stuff.length - 1];
             alert(id);

            window.location.href = '@Url.Action("OrderDetails", "RepresntitiveAndAdvisor")/' + id;
        }
    </script>
}